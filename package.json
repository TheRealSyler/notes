{
  "name": "notes",
  "version": "2.0.0",
  "main": "./dist/main.js",
  "scripts": {
    "build-main": "yarn env:prod && webpack --config-name main --mode production",
    "build-renderer": "yarn env:prod && webpack  --config-name renderer --mode production",
    "env:prod": "cross-env NODE_ENV=production",
    "build": "yarn build-main && yarn build-renderer",
    "start-renderer-dev": "webpack-dev-server --config-name renderer",
    "start-main-dev": "webpack --config-name main && electron ./dist/main.js",
    "start": "concurrently \"yarn start-renderer-dev\" \"yarn start-renderer-dev\"",
    "prestart": "yarn build",
    "start-electron": "electron .",
    "pack": "yarn build && electron-builder --dir",
    "dist": "yarn build && electron-builder",
    "dist-all": "yarn build && electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "Notes",
    "appId": "org.your.name",
    "mac": {
      "category": "your.app.category.type"
    },
    "directories": {
      "output": "release",
      "buildResources": "src/assets"
    },
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "linux": {
      "target": "deb"
    },
    "win": {
      "target": "nsis"
    }
  },
  "author": {
    "name": "Leonard Grosoli",
    "email": "hileo77@gmail.com"
  },
  "license": "mit",
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-transform-react-jsx": "^7.12.1",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-typescript": "^7.7.7",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/html-webpack-plugin": "^3.2.4",
    "@types/webpack": "^4.41.24",
    "@types/webpack-env": "^1.15.0",
    "@types/webpack-merge": "^4.1.5",
    "babel-loader": "^8.0.6",
    "concurrently": "^5.3.0",
    "cross-env": "^5.2.1",
    "css-loader": "^2.1.1",
    "electron": "^7.2.4",
    "electron-builder": "^20.44.4",
    "electron-devtools-installer": "^2.2.4",
    "file-loader": "^3.0.1",
    "fork-ts-checker-webpack-plugin": "^1.6.0",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^4.6.0",
    "jest": "^24.9.0",
    "lint-staged": "^8.2.1",
    "node-sass": "^4.13.0",
    "prettier": "^1.19.1",
    "sass-loader": "^7.3.1",
    "snowpack": "^2.16.1",
    "source-map-loader": "^0.2.4",
    "spectron": "^5.0.0",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.3.0",
    "ts-node": "^9.0.0",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.1.0",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "electron-store": "^5.1.0",
    "preact": "^10.5.5"
  }
}
